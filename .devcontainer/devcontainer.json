{
    "name": "My App",
    "build": {
      "dockerfile": "Dockerfile",
      "context": ".."
    },
    "runArgs": ["--init"],
    "postCreateCommand": "npm install",
    "remoteEnv": {
      "PORT": "3000",
      "MONGO_URI": "${MONGO_URI}",
      "NEXT_PUBLIC_ONCHAINKIT_API_KEY": "${NEXT_PUBLIC_ONCHAINKIT_API_KEY}",
      "OPENAI_API_KEY": "${OPENAI_API_KEY}"
    },
    "forwardPorts": [3000],
    "portsAttributes": {
      "3000": {
        "label": "App Port",
        "onAutoForward": "notify"
      }
    }
  }
  